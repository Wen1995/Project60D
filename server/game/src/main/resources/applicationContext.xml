<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    
    <context:component-scan base-package="com.game" >
        <context:include-filter type="regex" expression="com.game.*Handler" />
        <context:include-filter type="regex" expression="com.game.*ServiceImpl" />
        <context:include-filter type="regex" expression="com.game.*Dao" />
    </context:component-scan>
    
    <bean id="serviceAroundMethod" class="com.game.framework.console.factory.ServiceAroundMethod" />
    
    <bean id="advisor" class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor">
		<property name="mappedName" value="*" />
		<property name="advice" ref="serviceAroundMethod" />
	</bean>
	
	<bean class="org.springframework.aop.framework.autoproxy.BeanNameAutoProxyCreator">
        <property name="beanNames">
            <list>
                <value>*ServiceImpl</value>
            </list>
        </property>
        <property name="interceptorNames">
            <list>
                <value>advisor</value>
            </list>
        </property>
    </bean>
</beans>